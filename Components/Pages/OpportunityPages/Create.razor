@page "/opportunities/create"
@using Microsoft.AspNetCore.Authorization
@using System.ComponentModel.DataAnnotations
@attribute [Authorize]
@inject IServiceOpportunityService OpportunityService
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>Create Opportunity - ServeHub</PageTitle>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h2><i class="bi bi-plus-circle"></i> Create Service Opportunity</h2>
            <hr />

            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle"></i> @errorMessage
                    <button type="button" class="btn-close" @onclick="@(() => errorMessage = null)"></button>
                </div>
            }

            <div class="card shadow-sm">
                <div class="card-body">
                    <EditForm Model="opportunityModel" OnValidSubmit="HandleCreate">
                        <DataAnnotationsValidator />

                        <div class="mb-3">
                            <label for="title" class="form-label">Title <span class="text-danger">*</span></label>
                            <InputText id="title" @bind-Value="opportunityModel.Title" class="form-control" placeholder="e.g., Food Bank Volunteer Needed" />
                            <ValidationMessage For="@(() => opportunityModel.Title)" class="text-danger" />
                        </div>

                        <div class="mb-3">
                            <label for="description" class="form-label">Description <span class="text-danger">*</span></label>
                            <InputTextArea id="description" @bind-Value="opportunityModel.Description" class="form-control" rows="5" placeholder="Describe the volunteer opportunity..." />
                            <ValidationMessage For="@(() => opportunityModel.Description)" class="text-danger" />
                        </div>

                        <div class="mb-3">
                            <label for="location" class="form-label">Location <span class="text-danger">*</span></label>
                            <InputText id="location" @bind-Value="opportunityModel.Location" class="form-control" placeholder="e.g., Community Center, 123 Main St" />
                            <ValidationMessage For="@(() => opportunityModel.Location)" class="text-danger" />
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="startDate" class="form-label">Start Date/Time <span class="text-danger">*</span></label>
                                <InputDate Type="InputDateType.DateTimeLocal" id="startDate" @bind-Value="opportunityModel.StartDate" class="form-control" />
                                <ValidationMessage For="@(() => opportunityModel.StartDate)" class="text-danger" />
                            </div>

                            <div class="col-md-6 mb-3">
                                <label for="endDate" class="form-label">End Date/Time <span class="text-danger">*</span></label>
                                <InputDate Type="InputDateType.DateTimeLocal" id="endDate" @bind-Value="opportunityModel.EndDate" class="form-control" />
                                <ValidationMessage For="@(() => opportunityModel.EndDate)" class="text-danger" />
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="maxVolunteers" class="form-label">Max Volunteers <span class="text-danger">*</span></label>
                                <InputNumber id="maxVolunteers" @bind-Value="opportunityModel.MaxVolunteers" class="form-control" />
                                <ValidationMessage For="@(() => opportunityModel.MaxVolunteers)" class="text-danger" />
                            </div>

                            <div class="col-md-6 mb-3">
                                <label for="category" class="form-label">Category</label>
                                <InputText id="category" @bind-Value="opportunityModel.Category" class="form-control" placeholder="e.g., Food Service, Education" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="imageUrl" class="form-label">Image URL (optional)</label>
                            <InputText id="imageUrl" @bind-Value="opportunityModel.ImageUrl" class="form-control" placeholder="https://example.com/image.jpg" />
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary" disabled="@isSubmitting">
                                @if (isSubmitting)
                                {
                                    <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                }
                                <i class="bi bi-check-circle"></i> Create Opportunity
                            </button>
                            <a href="/opportunities" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private OpportunityCreateModel opportunityModel = new();
    private string? errorMessage;
    private bool isSubmitting = false;

    /// <summary>
    /// Initializes default values for new opportunity
    /// </summary>
    protected override void OnInitialized()
    {
        // Set default start date to tomorrow
        opportunityModel.StartDate = DateTime.Now.AddDays(1).Date.AddHours(9);
        // Set default end date to 3 hours after start
        opportunityModel.EndDate = opportunityModel.StartDate.AddHours(3);
    }

    /// <summary>
    /// Creates new service opportunity and redirects to details page
    /// </summary>
    private async Task HandleCreate()
    {
        isSubmitting = true;
        errorMessage = null;

        try
        {
            // Additional validation
            if (opportunityModel.EndDate <= opportunityModel.StartDate)
            {
                errorMessage = "End date must be after start date.";
                return;
            }

            if (opportunityModel.StartDate <= DateTime.Now)
            {
                errorMessage = "Start date must be in the future.";
                return;
            }

            // Get current user ID
            var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
            var userId = authState.User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;

            if (string.IsNullOrEmpty(userId))
            {
                errorMessage = "You must be logged in to create an opportunity.";
                return;
            }

            // Create new ServiceOpportunity entity
            var opportunity = new ServiceOpportunity
            {
                Title = opportunityModel.Title!,
                Description = opportunityModel.Description!,
                Location = opportunityModel.Location!,
                StartDate = opportunityModel.StartDate,
                EndDate = opportunityModel.EndDate,
                MaxVolunteers = opportunityModel.MaxVolunteers,
                Category = opportunityModel.Category,
                ImageUrl = opportunityModel.ImageUrl,
                CreatedByUserId = userId,
                CreatedAt = DateTime.UtcNow
            };

            // Save to database
            var createdOpportunity = await OpportunityService.CreateOpportunityAsync(opportunity);

            // Redirect to opportunity details page
            Navigation.NavigateTo($"/opportunities/{createdOpportunity.Id}");
        }
        catch (Exception ex)
        {
            errorMessage = $"Error creating opportunity: {ex.Message}";
        }
        finally
        {
            isSubmitting = false;
        }
    }

    /// <summary>
    /// Model for create opportunity form with validation
    /// </summary>
    public class OpportunityCreateModel
    {
        [Required(ErrorMessage = "Title is required")]
        [StringLength(200, ErrorMessage = "Title must be less than 200 characters")]
        public string? Title { get; set; }

        [Required(ErrorMessage = "Description is required")]
        [StringLength(2000, ErrorMessage = "Description must be less than 2000 characters")]
        public string? Description { get; set; }

        [Required(ErrorMessage = "Location is required")]
        [StringLength(300, ErrorMessage = "Location must be less than 300 characters")]
        public string? Location { get; set; }

        [Required(ErrorMessage = "Start date is required")]
        public DateTime StartDate { get; set; }

        [Required(ErrorMessage = "End date is required")]
        public DateTime EndDate { get; set; }

        [Required(ErrorMessage = "Max volunteers is required")]
        [Range(1, 1000, ErrorMessage = "Max volunteers must be between 1 and 1000")]
        public int MaxVolunteers { get; set; } = 10;

        [StringLength(100)]
        public string? Category { get; set; }

        [Url(ErrorMessage = "Please enter a valid URL")]
        [StringLength(500)]
        public string? ImageUrl { get; set; }
    }
}
