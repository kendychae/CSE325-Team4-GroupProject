@page "/"
@inject NavigationManager Navigation

<PageTitle>Home - ServeHub</PageTitle>

<div class="hero-section text-center py-5 mb-5">
    <div class="container">
        <h1 class="display-3 fw-bold mb-3 fade-in">Welcome to ServeHub</h1>
        <p class="lead mb-4 fade-in delay-1">Connect with meaningful volunteer opportunities and make a difference in your community</p>

        <div class="d-flex gap-3 justify-content-center fade-in delay-2">
            <a href="/opportunities" class="btn btn-light btn-lg px-4 shadow-sm">Browse Opportunities</a>

            <AuthorizeView>
                <NotAuthorized>
                    <a href="/Account/Register" class="btn btn-outline-light btn-lg px-4">Get Started</a>
                </NotAuthorized>
            </AuthorizeView>
        </div>
    </div>
</div>

<div class="container">

    <!-- Features -->
    <div class="row mb-5">
        <div class="col-md-4 text-center mb-4">
            <div class="feature-icon bg-primary text-white">
                <i class="bi bi-search"></i>
            </div>
            <h3 class="fw-semibold">Discover</h3>
            <p class="text-muted">Find volunteer opportunities that match your interests and schedule</p>
        </div>

        <div class="col-md-4 text-center mb-4">
            <div class="feature-icon bg-success text-white">
                <i class="bi bi-hand-thumbs-up"></i>
            </div>
            <h3 class="fw-semibold">Register</h3>
            <p class="text-muted">Easy registration process to sign up for service opportunities</p>
        </div>

        <div class="col-md-4 text-center mb-4">
            <div class="feature-icon bg-info text-white">
                <i class="bi bi-heart-fill"></i>
            </div>
            <h3 class="fw-semibold">Serve</h3>
            <p class="text-muted">Make a positive impact and help others in your community</p>
        </div>
    </div>

    <!-- Call to Action -->
    <div class="row highlight-section rounded-4 p-5 mb-5">
        <div class="col-lg-6 mb-4 mb-lg-0">
            <h2 class="display-6 fw-bold mb-3">Make a Difference Today</h2>
            <p class="lead mb-4">ServeHub connects volunteers with organizations that need help. Whether you have a few hours or want to commit long-term, there's an opportunity waiting for you.</p>

            <AuthorizeView>
                <Authorized>
                    <a href="/opportunities" class="btn btn-primary btn-lg shadow-sm">View All Opportunities</a>
                </Authorized>

                <NotAuthorized>
                <a href="/Account/Register" class="btn btn-outline-light btn-lg px-4 hero-btn">Sign Up Now</a>
                <a href="/Account/Login" class="btn btn-outline-light btn-lg px-4 hero-btn">Login</a>
                </NotAuthorized>
            </AuthorizeView>
        </div>

        <div class="col-lg-6 d-flex align-items-center justify-content-center">
            <i class="bi bi-people-fill text-primary cta-icon"></i>
        </div>
    </div>

    <!-- Why Choose ServeHub -->
    <div class="row mb-5">
        <div class="col-12 text-center mb-4">
            <h2 class="fw-bold">Why Choose ServeHub?</h2>
        </div>

        <div class="col-md-6 mb-3">
            <div class="card feature-card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-shield-check text-primary me-2"></i>Verified Opportunities</h5>
                    <p class="card-text">All service opportunities are verified to ensure authenticity and safety.</p>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-3">
            <div class="card feature-card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-clock-history text-success me-2"></i>Flexible Scheduling</h5>
                    <p class="card-text">Find opportunities that fit your schedule, from one-time events to ongoing commitments.</p>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-3">
            <div class="card feature-card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-award text-warning me-2"></i>Track Your Impact</h5>
                    <p class="card-text">Keep track of your volunteer hours and see the difference you're making.</p>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-3">
            <div class="card feature-card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-globe text-info me-2"></i>Community Focused</h5>
                    <p class="card-text">Connect with local organizations and neighbors who share your passion for service.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<h1>Hello, world!</h1>

Welcome to your new app.
