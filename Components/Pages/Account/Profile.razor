@page "/Account/Profile"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Identity
@using System.ComponentModel.DataAnnotations
@attribute [Authorize]
@inject UserManager<ApplicationUser> UserManager
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>My Profile - ServeHub</PageTitle>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h2><i class="bi bi-person-circle"></i> My Profile</h2>
            <hr />

            @if (!string.IsNullOrEmpty(successMessage))
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle"></i> @successMessage
                    <button type="button" class="btn-close" @onclick="@(() => successMessage = null)"></button>
                </div>
            }

            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle"></i> @errorMessage
                    <button type="button" class="btn-close" @onclick="@(() => errorMessage = null)"></button>
                </div>
            }

            @if (isLoading)
            {
                <div class="text-center">
                    <div class="spinner-border" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            }
            else if (profileModel != null)
            {
                <div class="card shadow-sm">
                    <div class="card-body">
                        <EditForm Model="profileModel" OnValidSubmit="HandleSaveProfile">
                            <DataAnnotationsValidator />

                            <div class="mb-3">
                                <label class="form-label"><strong>Email:</strong></label>
                                <p class="form-control-plaintext">@profileModel.Email</p>
                            </div>

                            <div class="mb-3">
                                <label for="firstname" class="form-label">First Name</label>
                                <InputText id="firstname" @bind-Value="profileModel.FirstName" class="form-control" placeholder="Enter your first name" />
                                <ValidationMessage For="@(() => profileModel.FirstName)" class="text-danger" />
                            </div>

                            <div class="mb-3">
                                <label for="lastname" class="form-label">Last Name</label>
                                <InputText id="lastname" @bind-Value="profileModel.LastName" class="form-control" placeholder="Enter your last name" />
                                <ValidationMessage For="@(() => profileModel.LastName)" class="text-danger" />
                            </div>

                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-primary" disabled="@isSaving">
                                    @if (isSaving)
                                    {
                                        <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                    }
                                    <i class="bi bi-save"></i> Save Changes
                                </button>
                                <a href="/my-registrations" class="btn btn-outline-secondary">
                                    <i class="bi bi-calendar-check"></i> View My Registrations
                                </a>
                            </div>
                        </EditForm>
                    </div>
                </div>

                <div class="card shadow-sm mt-3">
                    <div class="card-body">
                        <h5 class="card-title">Account Information</h5>
                        <p><strong>Member Since:</strong> @(user?.Email != null ? "Account Created" : "N/A")</p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@code {
    private ProfileModel? profileModel;
    private ApplicationUser? user;
    private bool isLoading = true;
    private bool isSaving = false;
    private string? successMessage;
    private string? errorMessage;

    /// <summary>
    /// Loads current user profile data on initialization
    /// </summary>
    protected override async Task OnInitializedAsync()
    {
        try
        {
            // Get currently authenticated user
            var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
            var userClaim = authState.User;

            if (userClaim?.Identity?.IsAuthenticated == true)
            {
                user = await UserManager.GetUserAsync(userClaim);

                if (user != null)
                {
                    // Populate profile model with user data
                    profileModel = new ProfileModel
                    {
                        Email = user.Email,
                        FirstName = string.Empty,  // Can extend ApplicationUser to store these
                        LastName = string.Empty
                    };
                }
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading profile: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    /// <summary>
    /// Saves updated profile information
    /// </summary>
    private async Task HandleSaveProfile()
    {
        isSaving = true;
        errorMessage = null;
        successMessage = null;

        try
        {
            if (user != null && profileModel != null)
            {
                // Update user information (extend ApplicationUser to store first/last name)
                var result = await UserManager.UpdateAsync(user);

                if (result.Succeeded)
                {
                    successMessage = "Profile updated successfully!";
                }
                else
                {
                    errorMessage = "Failed to update profile: " + string.Join(", ", result.Errors.Select(e => e.Description));
                }
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error saving profile: {ex.Message}";
        }
        finally
        {
            isSaving = false;
        }
    }

    /// <summary>
    /// Model for profile form data
    /// </summary>
    public class ProfileModel
    {
        public string? Email { get; set; }

        [Required(ErrorMessage = "First name is required")]
        [StringLength(50, ErrorMessage = "First name must be less than 50 characters")]
        public string? FirstName { get; set; }

        [Required(ErrorMessage = "Last name is required")]
        [StringLength(50, ErrorMessage = "Last name must be less than 50 characters")]
        public string? LastName { get; set; }
    }
}
