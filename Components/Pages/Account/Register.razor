@page "/Account/Register"
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager
@inject NavigationManager Navigation

<div class="container">
    <div class="col-md-6">
        <div class="glass-card">
            <h3>Create Account</h3>

            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @errorMessage
                    <button type="button" class="btn-close" @onclick="@(() => errorMessage = null)"></button>
                </div>
            }

            @if (registrationSuccess)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    âœ“ Registration successful! Redirecting to login...
                </div>
            }

            <EditForm Model="registerModel" OnValidSubmit="HandleRegister">
                <DataAnnotationsValidator />
                <ValidationSummary />

                <div class="mb-3">
                    <label for="fullname" class="form-label">Full Name</label>
                    <InputText id="fullname" @bind-Value="registerModel.FullName" class="form-control" placeholder="Enter your full name" />
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email Address</label>
                    <InputText id="email" @bind-Value="registerModel.Email" class="form-control" placeholder="Enter your email" />
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <InputText id="password" @bind-Value="registerModel.Password" type="password" class="form-control" placeholder="Create a password" />
                </div>
                <div class="button-container">
                    <button type="submit" class="btn btn-primary">Sign Up</button>
                    <a href="/Account/Login" class="btn btn-link">Already have an account?</a>
                </div>
            </EditForm>
        </div>
    </div>
</div>

@code {
    private RegisterModel registerModel = new();
    private string? errorMessage = null;
    private bool registrationSuccess = false;

    private async Task HandleRegister()
    {
        try
        {
            if (string.IsNullOrWhiteSpace(registerModel.Email) || string.IsNullOrWhiteSpace(registerModel.Password))
            {
                errorMessage = "Email and password are required.";
                return;
            }

            // Create a new user
            var user = new ApplicationUser
            {
                UserName = registerModel.Email,
                Email = registerModel.Email,
                // Add full name if ApplicationUser has this property
            };

            var result = await UserManager.CreateAsync(user, registerModel.Password);

            if (result.Succeeded)
            {
                registrationSuccess = true;
                await Task.Delay(2000); // Wait 2 seconds before redirecting
                Navigation.NavigateTo("/Account/Login");
            }
            else
            {
                // Combine all errors into a single message
                errorMessage = string.Join(" ", result.Errors.Select(e => e.Description));
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"An error occurred during registration: {ex.Message}";
        }
    }

    public class RegisterModel
    {
        public string? FullName { get; set; }
        public string? Email { get; set; }
        public string? Password { get; set; }
    }
}

