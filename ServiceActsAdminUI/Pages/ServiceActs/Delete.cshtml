@page
@model ServiceActsAdminUI.Pages.ServiceActs.DeleteModel
@{
    ViewData["Title"] = "Delete Service Act";
}

<h1>Delete Service Act</h1>

<h3>Are you sure you want to delete this service act?</h3>
<div>
    <h4>@Model.ServiceAct.Name</h4>
    <p>@Model.ServiceAct.Description</p>
</div>

<form method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>
